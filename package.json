{
  "name": "vscode-akita-angular-snippets",
  "publisher": "Nicole",
  "displayName": "Akita Angular Snippets",
  "description": "Akita Angular Snippets",
  "version": "0.0.1",
  "icon": "assets/images/icon.png",
  "engines": {
    "vscode": "^1.22.0"
  },
  "author": {
    "name": "Nicole"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "angular",
    "akita"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out",
  "contributes": {
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "extension.akita-page",
        "title": "Akita Page"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.akita-page"
        }
      ]
    }
  },
  "scripts": {
    "tsc": "npm run tsc-templates && tsc -p ./",
    "start": "npm run tsc-templates && tsc -watch -p ./",
    "tsc-templates": "copyfiles \"templates/**/*.tmpl\" \"./out\"",
    "tslint": "./node_modules/tslint/bin/tslint -c tslint.json \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/vscode": "^1.44.0",
    "copyfiles": "^2.2.0",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.8.3"
  }
}